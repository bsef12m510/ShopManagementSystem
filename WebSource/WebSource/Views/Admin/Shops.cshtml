@model List<WebSource.Models.shop>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="~/#">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">Tables</li>
            </ol>
            <!-- Example DataTables Card-->
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fa fa-table"></i> Data Table Example
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Shop ID</th>
                                    <th>Shop Name</th>
                                    <th>Manager</th>
                                    <th>Address</th>
                                    <th>Delete</th>
                                    <th>Edit</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Shop ID</th>
                                    <th>Shop Name</th>
                                    <th>Manager</th>
                                    <th>Address</th>
                                    <th>Delete</th>
                                    <th>Edit</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var shop in Model)
                                {
                                    <tr>
                                        <td>
                                            @shop.shop_id
                                        </td>
                                        <td>
                                            @shop.shope_name
                                        </td>
                                        <td>
                                            @shop.shop_mngr
                                        </td>
                                        <td>
                                            @shop.address
                                        </td>
                                        <td>
                                            <a href="DeleteShop?shop_id=@shop.shop_id">Delete</a>
                                        </td>
                                        <td>
                                            <a href="EditShop?shop_id=@shop.shop_id">Edit</a>
                                        </td>
                                    </tr>
                                }                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        