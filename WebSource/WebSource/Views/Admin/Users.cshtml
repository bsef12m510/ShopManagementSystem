@model List<WebSource.Models.user>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="~/#">Dashboard</a>
    </li>
    <li class="breadcrumb-item active">Tables</li>
</ol>
<!-- Example DataTables Card-->
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Data Table Example
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>User ID</th>
                        <th>Username</th>
                        <th>Shop</th>
                        <th>Delete</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>User ID</th>
                        <th>Username</th>
                        <th>Shop</th>
                        <th>Delete</th>
                        <th>Edit</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var user in Model) {
                        <tr>
                            <td>
                                @user.user_id
                            </td>
                            <td>
                                @user.username
                            </td>
                            <td>
                                @user.shop.shope_name
                            </td>
                            <td><a href="DeleteUser?user_id=@user.user_id">Delete</a></td>
                            <td><a href="EditUser?user_id=@user.user_id">Edit</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
