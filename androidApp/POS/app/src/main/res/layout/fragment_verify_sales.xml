<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/saleDescContainer"
    android:clickable="true"
    android:background="@color/body_background_color"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="12dp"

                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="Customer"
                    android:textSize="16sp"
                    />
                <EditText
                    android:id="@+id/edtCustName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:layout_marginLeft="4dp"
                    android:textColor="@drawable/edit_text_selector"
                    android:background="@color/white"
                    android:hint="Enter customer name"
                    android:gravity="end"
                    android:layout_gravity="end"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="12dp"

                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="Mobile"
                    android:textSize="16sp"
                    />
                <EditText
                    android:id="@+id/edtCustNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:layout_marginLeft="4dp"
                    android:textColor="@drawable/edit_text_selector"
                    android:hint="Enter mobile no"
                    android:inputType="number"
                    android:background="@color/white"
                    android:gravity="end"
                    android:layout_gravity="end"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/section_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            >



            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingRight="12dp"
                android:paddingLeft="6dp"
                android:layout_marginTop="2dp"
                android:weightSum="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/product"
                    android:gravity="center"
                    android:text="Product"
                    android:textColor="@color/colorAccent"
                    android:layout_weight="0.4"

                    android:layout_marginRight="4dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/brand"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:text="Quantity"
                    android:layout_weight="0.2"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/model"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:text="Price"
                    android:layout_weight="0.3"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                   android:visibility="gone"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"

                    android:layout_weight="0.1"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/sales_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"

            android:background="@color/white"
            />

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="12dp"

                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Total Amount"
                    android:textSize="16sp"
                    />
                <EditText
                    android:id="@+id/edtTotalAmnt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:layout_marginLeft="4dp"
                    android:hint="Enter total amount"
                    android:inputType="number"
                    android:textColor="@drawable/edit_text_selector"
                    android:background="@color/white"
                    android:gravity="end"
                    android:layout_gravity="end"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="12dp"

                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Paid Amount*"
                    android:textSize="16sp"
                    />
                <EditText
                    android:id="@+id/edtPaidAmnt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:layout_marginLeft="4dp"
                    android:background="@color/white"
                    android:textColor="@drawable/edit_text_selector"
                    android:hint="Enter paid amount"
                    android:inputType="number"
                    android:gravity="end"
                    android:layout_gravity="end"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="12dp"

                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="Due Amount"
                    android:textSize="16sp"
                    />
                <EditText
                    android:id="@+id/edtDueAmnt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:layout_marginLeft="4dp"
                    android:inputType="number"
                    android:textColor="@drawable/edit_text_selector"
                    android:background="@color/white"
                    android:gravity="end"
                    android:hint="0.00TK"
                    android:layout_gravity="end"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop = "10dp"
            android:layout_marginBottom = "10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Finish"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textColor="@color/white"
            android:id="@+id/finishButton" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop = "10dp"
            android:layout_marginBottom = "10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="SmS"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textColor="@color/white"
            android:id="@+id/smsBtn"
            android:visibility="gone"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop = "10dp"
            android:layout_marginBottom = "10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Print"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textColor="@color/white"
            android:id="@+id/printBtn"
            android:visibility="gone"/>

        </LinearLayout>



</android.support.v4.widget.NestedScrollView>